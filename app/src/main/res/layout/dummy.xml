<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivCartItemImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/meal"
            android:layout_marginEnd="16dp"
            android:contentDescription="CartImage" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCartItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burger Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/md_black_1000" />

            <TextView
                android:id="@+id/tvCartItemPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cartitemprice"
                android:textSize="14sp"
                android:textColor="@color/md_black_1000"
                /> <!-- Initially hidden -->

        </LinearLayout>

        <TextView
            android:id="@+id/tvCartItemQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000" />

    </LinearLayout>

</androidx.cardview.widget.CardView>